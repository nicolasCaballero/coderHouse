{{#if products}}
<body class="p-3 mb-2 bg-secondary text-white">
    <div class="container">
        <h1 class="p-3 mb-2 bg-dark text-white text-center border border-white shadow p-3 mb-5 rounded"> VISTA PRODUCTOS
        </h1>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">PRECIO</th>
                    <th scope="col">IMAGEN</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{title}}</td>
                    <td>${{price}}</td>
                    <td><img height="100" width="100" src="{{thumbnail}}" class="img-thumbnail"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="container">
        <a href="http://localhost:3434/">
            <button class="btn btn-dark border border-white shadow rounded">VOLVER</button>
        </a>
    </div>
</body>
{{else}}
<body class="p-3 mb-2 bg-secondary text-white">
    <div class="container">
        <h1 class="p-3 mb-2 bg-dark text-white text-center border border-white shadow p-3 mb-5 rounded"> VISTA PRODUCTOS</h1>
        <p class="alert alert-danger">No se encontraron datos</p>    </div>
    <div class="container">
        <a href="http://localhost:3434/">
            <button class="btn btn-dark border border-white shadow rounded">VOLVER</button>
        </a>
    </div>
</body>
{{/if}}