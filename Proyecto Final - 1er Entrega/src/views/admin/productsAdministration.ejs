<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="http://simpleicon.com/wp-content/uploads/Code-Optimization-2.png">
   <link rel="stylesheet" href="/productDetail.css">
    <link rel="stylesheet" href="/footer.css">
    <title>Proyecto Final - Admin Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<%- include('../partials/adminHeader')  %>

<body class="p-3 mb-2">
    <div class="container">
      <table class="table table-hover table-borderless">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">SKU</th>
            <th scope="col">FECHA CREACION</th>
            <th scope="col">TITULO</th>
            <th scope="col">PRECIO</th>
            <th scope="col">CANTIDAD</th>
            <th scope="col">IMAGEN</th>
            <th scope="col">DESCRIPCION</th>
            <th scope="col">EDITAR</th>
            <th scope="col">ELIMINAR</th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < products.length; i++ ) { %>
          <tr>
            <th scope="row"><%= products[i].id %></th>
            <td><%= products[i].sku %></td>
            <td><%= products[i].timestamp %></td>
            <td><%= products[i].title %></td>
            <td>$<%= toThousand(products[i].price) %></td>
            <td><%= products[i].qty %></td>
            <td><img width="100" height="100" src="<%= products[i].thumbnail %>" alt=""></td>
            <td><%= products[i].description %></td>
            <td><a href="/admin/productos/edit/<%= products[i].id %>"><button class="text-secondary btn bg-info bg-gradient rounded-pill mb-3" id="botonComprar">EDITAR</button></a></td>
            <td><a onClick='return confirm("¿Seguro querés borrar el producto <%= products[i].title %>?")' href="/admin/productos/delete/<%= products[i].id %>"><button class="text-secondary btn bg-info bg-gradient rounded-pill mb-3" id="botonComprar">ELIMINAR</button></a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <a href="/admin">
        <button type="button" class="text-secondary btn bg-info bg-gradient rounded-pill mb-3" id="botonComprar">VOLVER</button>
      </a>
    </div>
</body>

</html>