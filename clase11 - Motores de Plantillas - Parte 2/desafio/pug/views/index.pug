doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Desafio clase11
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous")
    
    body(class="p-3 mb-2 bg-secondary text-white")
        div(class="container")
            h1(class="p-3 mb-2 bg-dark text-white text-center border border-white shadow p-3 mb-5 rounded") DESAFIO 11 nicolasCaballero
            span(class="fs-2") Crear un producto
            form(action="/api/productos" method="POST")
                div(class="mb-3 mt-3")
                    label(for="title" class="form-label") Titulo
                    input(required type="text" class="form-control" id="title" name="title" placeholder="Nombre del Producto")
                div(class="mb-3 mt-3")
                    label(for="price" class="form-label") Precio
                    input(required type="number" class="form-control" id="price" name="price" placeholder="Precio del Producto")
                div(class="mb-3 mt-3")
                    label(for="thumbnail" class="form-label") Imagen
                    input(required type="text" class="form-control" id="thumbnail" name="thumbnail" placeholder="URL de la imagen Producto")
                button(type="submit" class="btn btn-dark border border-white shadow rounded") CREAR
        hr
        div(class="container")
        a(href="http://localhost:3434/productos/vista")
            button(class="btn btn-dark border border-white shadow rounded") VER PRODUCTOS
            