doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Desafio clase11
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous")

    body(class="p-3 mb-2 bg-secondary text-white")
        div(class="container")
            h1(class="p-3 mb-2 bg-dark text-white text-center border border-white shadow p-3 mb-5 rounded") VISTA PRODUCTOS
            #products
            if products
                    table(class="table table-dark")
                        thead 
                            tr
                                th(scope="col") NOMBRE
                                th(scope="col") PRECIO
                                th(scope="col") IMAGEN
                        tbody
                            each v in products
                                tr
                                    td= v.title
                                    td= v.price
                                    td
                                        img(height="100" width="100" src= v.thumbnail class="img-thumbnail")
                    div(class="container")
                        a(href="http://localhost:3434/")
                            button(class="btn btn-dark border border-white shadow rounded") VOLVER
            else
                p(class="alert alert-danger") No se encontraron datos    
                    div(class="container")
                        a(href="http://localhost:3434/")
                            button(class="btn btn-dark border border-white shadow rounded") VOLVER